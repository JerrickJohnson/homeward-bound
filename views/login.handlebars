<div class="row pgFormat">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="backInDown form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input fadeInLeft" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="rotInDown btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input fadeInRight" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="backInDown form-input" type="text" id="email-signup" placeholder="name@gmail.com" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input lightSpeedRight" type="password" id="password-signup" placeholder="Password (min. 8 characters)" required>
      </div>
      <div class="form-group">
        <button class="lightSpeedLeft btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
